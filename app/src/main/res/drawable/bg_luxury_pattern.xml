<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/med_bg_white" />
        </shape>
    </item>

    <!-- Subtle gradient undertone -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#00000000"
                android:centerColor="#101A6B96"
                android:endColor="#201A6B96"
                android:type="linear" />
        </shape>
    </item>

    <!-- Subtle pattern texture -->
    <item>
        <color android:color="@android:color/transparent" />
    </item>

    <!-- Enhanced blue gradient overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="315"
                android:startColor="#00000000"
                android:centerColor="#151A6B96"
                android:endColor="#251A6B96"
                android:type="linear" />
        </shape>
    </item>

    <!-- Top decorative gradient -->
    <item
        android:top="-400dp"
        android:bottom="550dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="400dp"
                android:startColor="#203F88C5"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Vignette effect around edges -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="800dp"
                android:startColor="#00000000"
                android:endColor="#151A6B96"
                android:centerX="0.5"
                android:centerY="0.5" />
        </shape>
    </item>
</layer-list>