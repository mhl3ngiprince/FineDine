<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    android:padding="24dp"
    android:fillViewport="true">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:strokeColor="@color/primary_green_10"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Item Name Field -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Item Name"
                android:layout_marginBottom="16dp"
                app:boxStrokeColor="@color/primary_green"
                app:hintTextColor="@color/primary_green"
                app:helperText="e.g. Organic Basil Leaves"
                app:helperTextTextColor="@color/medium_gray">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nameInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_gray"
                    android:textColorHint="@color/medium_gray"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Quantity Field -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Current Quantity"
                android:layout_marginBottom="16dp"
                app:boxStrokeColor="@color/primary_green"
                app:hintTextColor="@color/primary_green"
                app:helperText="In stock quantity"
                app:helperTextTextColor="@color/medium_gray">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/quantityInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textColor="@color/dark_gray"
                    android:textColorHint="@color/medium_gray"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Threshold Field -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Reorder Threshold"
                app:boxStrokeColor="@color/primary_green"
                app:hintTextColor="@color/primary_green"
                app:helperText="Minimum quantity before reorder"
                app:helperTextTextColor="@color/medium_gray">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/thresholdInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textColor="@color/dark_gray"
                    android:textColorHint="@color/medium_gray"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bottom Shadow Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/shadow_gradient"
        android:layout_gravity="bottom"/>

</LinearLayout>