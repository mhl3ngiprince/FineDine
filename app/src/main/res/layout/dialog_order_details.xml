<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/light_green"
    android:padding="24dp">

    <!-- Order Header Section -->
    <TextView
        android:id="@+id/tvOrderInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/primary_green"
        android:shadowColor="@color/primary_green_20"
        android:shadowRadius="4"
        android:shadowDx="0"
        android:shadowDy="2"
       />

    <!-- Order Items Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order Items"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/primary_green"
        android:layout_marginBottom="16dp"/>

    <!-- Order Items List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvOrderItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:maxHeight="300dp"
        android:nestedScrollingEnabled="false"
        android:background="@drawable/rounded_container"
        android:padding="8dp"
        tools:listitem="@layout/item_order_entry"/>

    <!-- Order Notes -->
    <TextView
        android:id="@+id/tvOrderNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:textColor="@color/red_600"
        android:textSize="14sp"
        android:visibility="gone"
        tools:text="Special instructions: No onions, extra spicy"/>

    <!-- Order Status Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/tvOrderStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="@color/dark_gray"
            tools:text="Status: Preparing"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUpdateStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Status"
            android:backgroundTint="@color/primary_green"
            android:textColor="@color/white"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_edit"
            app:iconTint="@color/white"
            app:strokeColor="@color/primary_green_dark"
            app:strokeWidth="1dp"
            android:paddingHorizontal="24dp"/>
    </LinearLayout>

    <!-- Bottom Shadow Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/shadow_gradient"
        android:layout_gravity="bottom"/>

</LinearLayout>