<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/light_green"
    android:padding="24dp">

    <!-- Dialog Title -->
    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Party Size"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/primary_green"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:shadowColor="@color/primary_green_20"
        android:shadowRadius="4"
        android:shadowDx="0"
        android:shadowDy="2"/>

    <!-- Number Picker Container -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:strokeColor="@color/primary_green_10"
        app:strokeWidth="1dp">

    <!--    <NumberPicker
            android:id="@+id/numberPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minValue="1"
            android:maxValue="20"
            android:wrapSelectorWheel="false"
            android:padding="16dp"
            android:descendantFocusability="blocksDescendants"
            tools:targetApi="honeycomb" /> -->
    </androidx.cardview.widget.CardView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/primary_green"
            app:cornerRadius="8dp"
            app:backgroundTint="@color/white"
            app:strokeColor="@color/primary_green"
            app:strokeWidth="1dp"
            android:layout_marginEnd="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:textColor="@color/white"
            app:backgroundTint="@color/primary_green"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_check"
            app:iconTint="@color/white"
            app:strokeColor="@color/primary_green_dark"
            app:strokeWidth="1dp"/>
    </LinearLayout>

    <!-- Bottom Shadow Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/shadow_gradient"
        android:layout_gravity="bottom"/>

</LinearLayout>