<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="6dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp"
    android:stateListAnimator="@animator/card_raise">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Food Image Container -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <!-- Gold trim at top -->
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/luxe_gold" />

            <!-- Main Image -->
            <ImageView
                android:id="@+id/ivMenuItemImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Menu Item Image"
                tools:src="@tools:sample/backgrounds/scenic" />

            <!-- Gradient Overlay -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_menu_image" />

            <!-- Gold Corner Accent -->
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="end"
                android:src="@drawable/corner_gold"
                android:alpha="0.7" />

            <!-- Available Badge -->
            <TextView
                android:id="@+id/tvAvailabilityBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_margin="16dp"
                android:background="@drawable/bg_badge"
                android:paddingVertical="4dp"
                android:paddingHorizontal="12dp"
                android:text="AVAILABLE"
                android:textSize="9sp"
                android:textColor="@color/text_dark"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:shadowColor="#40000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                tools:ignore="SmallSp" />

            <!-- Price Badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom|end"
                android:layout_margin="16dp"
                android:background="@drawable/bg_price_tag"
                android:paddingVertical="6dp"
                android:paddingHorizontal="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R"
                    android:textColor="@color/luxe_gold"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvMenuItemPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="189"
                    android:textColor="@color/text_white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05" />
            </LinearLayout>
        </FrameLayout>

        <!-- Content Area with Dark Background -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/luxe_charcoal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="20dp">

            <!-- Item Name with Elegant Divider -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tvMenuItemCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIGNATURE DISH"
                    android:textColor="@color/luxe_gold"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.15"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tvMenuItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grilled Salmon Wellington"
                    android:textColor="@color/text_white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <!-- Elegant Divider -->
                <View
                    android:layout_width="40dp"
                    android:layout_height="2dp"
                    android:background="@color/luxe_gold"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp" />
            </LinearLayout>

            <!-- Description -->
            <TextView
                android:id="@+id/tvMenuItemDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fresh Atlantic salmon fillet wrapped in a delicate puff pastry with wild mushroom duxelles and prosciutto, served with a champagne beurre blanc sauce and seasonal vegetables."
                android:textColor="@color/text_light"
                android:textSize="12sp"
                android:lineSpacingExtra="4dp"
                android:gravity="center"
                android:maxLines="3"
                android:ellipsize="end" />

            <!-- Dish Features -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <!-- Chef's Special Badge -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_chef_hat"
                        app:tint="@color/luxe_gold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chef's Special"
                        android:textColor="@color/text_gray"
                        android:textSize="10sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Preparation Time -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_time"
                        app:tint="@color/luxe_gold" />

                    <TextView
                        android:id="@+id/tvPrepTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25 min"
                        android:textColor="@color/text_gray"
                        android:textSize="10sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Calories -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_calories"
                        app:tint="@color/luxe_gold" />

                    <TextView
                        android:id="@+id/tvCalories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="320 cal"
                        android:textColor="@color/text_gray"
                        android:textSize="10sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Spice Level -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_spicy"
                        app:tint="@color/luxe_gold" />

                    <TextView
                        android:id="@+id/tvSpiceLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mild"
                        android:textColor="@color/text_gray"
                        android:textSize="10sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <!-- Add to Order Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddToOrder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ADD TO ORDER"
                    android:textSize="12sp"
                    android:textColor="@color/luxe_charcoal"
                    android:paddingVertical="12dp"
                    android:backgroundTint="@color/luxe_gold"
                    app:cornerRadius="4dp"
                    android:letterSpacing="0.1"
                    android:textStyle="bold" />

                <!-- Add to Favorites Button -->
                <ImageButton
                    android:id="@+id/btnFavorite"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_favorite_border"
                    android:backgroundTint="@android:color/transparent"
                    app:tint="@color/luxe_gold"
                    android:contentDescription="Add to favorites" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>