<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/restaurant_primary"
    android:padding="8dp">

    <!-- Top trim accent -->
    <View
        android:layout_width="40dp"
        android:layout_height="2dp"
        android:background="@color/restaurant_accent"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/nav_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FINE DINE"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:letterSpacing="0.05"
        android:textColor="@color/restaurant_text_light"
        android:gravity="center"
        android:padding="8dp" />

    <!-- Logout button in top-right corner -->
    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_gravity="end"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="-48dp"
        android:backgroundTint="@color/restaurant_primary_dark"
        android:text="Logout"
        android:textColor="@color/restaurant_text_light"
        android:textSize="12sp"
        app:cornerRadius="16dp"
        app:strokeColor="@color/restaurant_accent"
        app:strokeWidth="1dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:stateListAnimator="@null"
        android:clickable="true"
        android:focusable="true"
        android:elevation="4dp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingVertical="4dp">

        <com.google.android.material.chip.ChipGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:singleSelection="true"
            app:chipSpacingHorizontal="8dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/nav_orders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orders"
                android:textColor="@color/restaurant_text_light"
                app:chipBackgroundColor="@color/restaurant_primary_dark"
                app:chipIcon="@drawable/ic_food"
                app:chipIconTint="@color/restaurant_accent"
                android:clickable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/nav_kitchen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kitchen"
                android:textColor="@color/restaurant_text_light"
                app:chipBackgroundColor="@color/restaurant_primary_dark"
                app:chipIcon="@drawable/ic_food"
                app:chipIconTint="@color/restaurant_accent"
                android:clickable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/nav_reservations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reservations"
                android:textColor="@color/restaurant_text_light"
                app:chipBackgroundColor="@color/restaurant_primary_dark"
                app:chipIcon="@drawable/ic_calendar"
                app:chipIconTint="@color/restaurant_accent"
                android:clickable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/nav_inventory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inventory"
                android:textColor="@color/restaurant_text_light"
                app:chipBackgroundColor="@color/restaurant_primary_dark"
                app:chipIcon="@drawable/ic_inventory"
                app:chipIconTint="@color/restaurant_accent"
                android:clickable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/nav_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textColor="@color/restaurant_text_light"
                app:chipBackgroundColor="@color/restaurant_primary_dark"
                app:chipIcon="@drawable/ic_menu_item"
                app:chipIconTint="@color/restaurant_accent"
                android:clickable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/nav_staff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Staff"
                android:textColor="@color/restaurant_text_light"
                app:chipBackgroundColor="@color/restaurant_primary_dark"
                app:chipIcon="@drawable/ic_people"
                app:chipIconTint="@color/restaurant_accent"
                android:clickable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/nav_dashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:textColor="@color/restaurant_text_light"
                app:chipBackgroundColor="@color/restaurant_primary_dark"
                app:chipIcon="@drawable/ic_menu_item"
                app:chipIconTint="@color/restaurant_accent"
                android:clickable="true" />
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/restaurant_accent"
        android:alpha="0.3"
        android:layout_marginVertical="8dp" />

    <!-- Alternate logout button (more visible) -->
    <Button
        android:id="@+id/logoutButtonAlt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGOUT"
        android:backgroundTint="@color/restaurant_accent"
        android:textColor="@color/restaurant_primary_dark"
        android:textStyle="bold"
        android:paddingVertical="12dp"
        app:cornerRadius="8dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp" />
</LinearLayout>