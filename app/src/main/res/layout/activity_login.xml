<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/restaurant_bg"
    tools:context="com.finedine.rms.LoginActivity">

    <!-- Logo in CardView with modern styling -->
    <androidx.cardview.widget.CardView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="70dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/restaurant_card_bg">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/logoj" />

        <View
            android:layout_width="40dp"
            android:layout_height="2dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="16dp"
            android:background="@color/restaurant_accent" />

    </androidx.cardview.widget.CardView>

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/restaurant_text_primary"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoImage" />

    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/login_subtitle"
        android:textColor="@color/restaurant_text_secondary"
        android:fontFamily="sans-serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <!-- Email Field -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="@color/restaurant_primary"
        app:hintTextColor="@color/restaurant_primary"
        app:boxBackgroundColor="@color/restaurant_card_bg"
        android:textColorHint="@color/restaurant_text_secondary"
        app:startIconDrawable="@android:drawable/ic_dialog_email"
        app:startIconTint="@color/restaurant_text_secondary"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/restaurant_text_primary"
            android:textColorHint="@color/restaurant_text_secondary" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:boxStrokeColor="@color/restaurant_primary"
        app:hintTextColor="@color/restaurant_primary"
        app:boxBackgroundColor="@color/restaurant_card_bg"
        android:textColorHint="@color/restaurant_text_secondary"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/restaurant_text_secondary"
        app:startIconDrawable="@android:drawable/ic_lock_idle_lock"
        app:startIconTint="@color/restaurant_text_secondary"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textColor="@color/restaurant_text_primary"
            android:textColorHint="@color/restaurant_text_secondary" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Login Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:textColor="@color/restaurant_text_light"
        app:cornerRadius="8dp"
        android:paddingVertical="14dp"
        android:backgroundTint="@color/restaurant_primary"
        android:stateListAnimator="@animator/button_press_animator" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        android:indeterminateTint="@color/restaurant_primary" />

    <!-- Demo credentials section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="For demo: admin/admin, customer/customer"
        android:textColor="@color/restaurant_text_secondary"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        android:alpha="0.7" />

    <!-- Firebase login info -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Firebase authentication enabled"
        android:textColor="@color/restaurant_primary"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        android:alpha="0.8" />

    <!-- Forgot Password -->
    <TextView
        android:id="@+id/forgotPasswordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Forgot Password?"
        android:textColor="@color/restaurant_accent"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:padding="8dp" />

    <!-- Create Account Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/registerText"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="CREATE ACCOUNT"
        android:textColor="@color/restaurant_primary"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:layout_marginTop="8dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/restoreMenuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Restore Menu"
            android:textSize="12sp"
            android:layout_margin="8dp"
            android:backgroundTint="@color/med_navy"
            android:textColor="@color/med_coral"
            android:padding="8dp"
            android:visibility="gone" />
    </FrameLayout>
</LinearLayout>