<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:background="@color/restaurant_primary"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/nav_header_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="App Logo"
        android:src="@drawable/logoj" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FINE DINE"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/restaurant_text_light"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nav_header_user_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant Management System"
        android:textColor="@color/restaurant_text_light"
        android:textSize="14sp" />

</LinearLayout>