<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_luxury_pattern">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/luxe_charcoal">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="48dp"
                android:paddingBottom="24dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:gravity="center_horizontal"
                app:layout_collapseMode="parallax">

                <!-- Logo Image -->
                <ImageView
                    android:id="@+id/ivRestaurantLogo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/logoj"
                    android:contentDescription="Restaurant Logo"
                    android:alpha="0.9" />

                <!-- Restaurant Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FINE DINE"
                    android:textSize="32sp"
                    android:textColor="@color/text_gold"
                    android:textStyle="bold"
                    android:letterSpacing="0.15"
                    android:layout_marginTop="16dp"
                    android:fontFamily="serif" />

                <!-- Tagline -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EXCEPTIONAL DINING EXPERIENCE"
                    android:textColor="@color/text_light"
                    android:textSize="12sp"
                    android:letterSpacing="0.2"
                    android:alpha="0.7"
                    android:layout_marginTop="4dp" />

                <!-- Gold Divider -->
                <View
                    android:layout_width="40dp"
                    android:layout_height="2dp"
                    android:background="@color/luxe_gold"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp" />
            </LinearLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <!-- Navigation Panel -->
        <include
            android:id="@+id/navigation_panel"
            layout="@layout/navigation_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Today's Performance Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TODAY'S PERFORMANCE"
                android:textSize="14sp"
                android:textColor="@color/text_gold"
                android:letterSpacing="0.1"
                android:layout_marginBottom="16dp" />

            <!-- Stats Cards Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clipToPadding="false">

            <!-- Revenue Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/luxe_dark">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_revenue"
                                app:tint="@color/luxe_gold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="REVENUE"
                                android:textColor="@color/luxe_gold"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:gravity="end" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvTodaySales"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R 23,450"
                            android:textSize="26sp"
                            android:textColor="@color/text_white"
                            android:textStyle="bold"
                            android:layout_marginTop="16dp" />

                        <TextView
                            android:id="@+id/tvSalesIncrease"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+18.2% from yesterday"
                            android:textSize="12sp"
                            android:textColor="#4CAF50"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Orders Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/luxe_dark">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_food"
                                app:tint="@color/luxe_gold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ORDERS"
                                android:textColor="@color/luxe_gold"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:gravity="end" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvActiveOrders"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="42"
                            android:textSize="26sp"
                            android:textColor="@color/text_white"
                            android:textStyle="bold"
                            android:layout_marginTop="16dp" />

                        <TextView
                            android:id="@+id/tvOrderStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8 awaiting service"
                            android:textSize="12sp"
                            android:textColor="@color/text_gray"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Second Row of Stats Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:clipToPadding="false">

            <!-- Inventory Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/luxe_dark">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_inventory"
                                app:tint="@color/luxe_gold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="INVENTORY"
                                android:textColor="@color/luxe_gold"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:gravity="end" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvLowStockItems"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:textSize="26sp"
                            android:textColor="@color/text_white"
                            android:textStyle="bold"
                            android:layout_marginTop="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="items need resupply"
                            android:textSize="12sp"
                            android:textColor="#FF9800"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Staff Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/luxe_dark">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_people"
                                app:tint="@color/luxe_gold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="STAFF"
                                android:textColor="@color/luxe_gold"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:gravity="end" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvStaffCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:textSize="26sp"
                            android:textColor="@color/text_white"
                            android:textStyle="bold"
                            android:layout_marginTop="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="on duty today"
                            android:textSize="12sp"
                            android:textColor="@color/text_gray"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Reservation Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UPCOMING RESERVATIONS"
                android:textSize="14sp"
                android:textColor="@color/text_gold"
                android:letterSpacing="0.1"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp" />

            <!-- Reservations Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/luxe_dark">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Reservation Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="TODAY, SEPTEMBER 16"
                            android:textColor="@color/text_white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvViewAllReservations"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VIEW ALL"
                            android:textColor="@color/luxe_gold"
                            android:textSize="12sp"
                            android:padding="8dp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true" />
                    </LinearLayout>

                    <!-- View separating header from content -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#22FFFFFF" />

                    <!-- Reservations List -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvRecentReservations"
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:clipToPadding="false"
                        android:padding="8dp"
                        tools:listitem="@layout/item_reservation" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Quick Actions Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QUICK ACTIONS"
                android:textSize="14sp"
                android:textColor="@color/text_gold"
                android:letterSpacing="0.1"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp" />

            <!-- Action Buttons Grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false">

                <!-- Inventory Management Button -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnInventory"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/luxe_dark"
                    app:strokeColor="@color/luxe_gold"
                    app:strokeWidth="1dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:rippleColor="@color/luxe_gold">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_inventory"
                            app:tint="@color/luxe_gold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Inventory"
                            android:textColor="@color/text_white"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Menu Management Button -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnMenu"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/luxe_dark"
                    app:strokeColor="@color/luxe_gold"
                    app:strokeWidth="1dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:rippleColor="@color/luxe_gold">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_menu_item"
                            app:tint="@color/luxe_gold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Menu"
                            android:textColor="@color/text_white"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Staff Management Button -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnStaff"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/luxe_dark"
                    app:strokeColor="@color/luxe_gold"
                    app:strokeWidth="1dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:rippleColor="@color/luxe_gold">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_people"
                            app:tint="@color/luxe_gold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Staff"
                            android:textColor="@color/text_white"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Analytics Button -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnAnalytics"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/luxe_dark"
                    app:strokeColor="@color/luxe_gold"
                    app:strokeWidth="1dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:rippleColor="@color/luxe_gold">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_analytics"
                            app:tint="@color/luxe_gold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Analytics"
                            android:textColor="@color/text_white"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </GridLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCreateReservation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        android:tint="@color/luxe_charcoal"
        app:backgroundTint="@color/luxe_gold"
        app:borderWidth="0dp"
        app:elevation="6dp" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>