<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Dashboard Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manager Dashboard"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/primary_green"
            android:layout_marginBottom="32dp"
            android:shadowColor="@color/primary_green_20"
            android:shadowRadius="4"
            android:shadowDx="0"
            android:shadowDy="2"/>

        <!-- Metrics Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <!-- Today's Sales Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvTodaySales"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="R0.00"
                        android:textSize="28sp"
                        android:textColor="@color/dark_gray"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today's Sales"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/medium_gray"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Active Orders Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvActiveOrders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="28sp"
                        android:textColor="@color/dark_gray"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active Orders"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/medium_gray"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Low Stock Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvLowStockItems"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="28sp"
                        android:textColor="@color/dark_gray"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Low Stock Items"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/medium_gray"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Reservations Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recent Reservations"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary_green"
            android:layout_marginBottom="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRecentReservations"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@drawable/rounded_container"
            android:clipToPadding="false"
            android:padding="8dp"
            android:layout_marginBottom="24dp"
            tools:listitem="@layout/item_reservation"/>

        <!-- Action Buttons -->
        <Button
            android:id="@+id/btnInventory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Inventory"
            android:onClick="navigateToInventory"
            android:backgroundTint="@color/primary_green"
            android:textColor="@color/white"
            app:cornerRadius="12dp"
            android:paddingVertical="14dp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Menu"
            android:onClick="navigateToMenuManagement"
            android:backgroundTint="@color/primary_green"
            android:textColor="@color/white"
            app:cornerRadius="12dp"
            android:paddingVertical="14dp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnStaff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Staff"
            android:onClick="navigateToStaffManagement"
            android:backgroundTint="@color/primary_green"
            android:textColor="@color/white"
            app:cornerRadius="12dp"
            android:paddingVertical="14dp"/>

    </LinearLayout>
</ScrollView>