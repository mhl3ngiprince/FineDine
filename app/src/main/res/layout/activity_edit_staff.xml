<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_luxury_pattern"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Staff Information"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/luxe_gold"
        android:fontFamily="serif"
        android:layout_marginBottom="24dp" />

    <!-- Staff Information Form -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/luxe_dark"
        app:contentPadding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Gold trim at top -->
            <View
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:background="@color/luxe_gold"
                android:layout_marginBottom="16dp" />

            <!-- Name Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxStrokeColor="@color/luxe_gold"
                app:hintTextColor="@color/luxe_gold"
                app:boxBackgroundColor="@color/transparent_black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etStaffName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Full Name"
                    android:inputType="textPersonName"
                    android:textColor="@color/text_white"
                    android:drawableStart="@drawable/ic_person"
                    android:drawableTint="@color/luxe_gold"
                    android:drawablePadding="8dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Email Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxStrokeColor="@color/luxe_gold"
                app:hintTextColor="@color/luxe_gold"
                app:boxBackgroundColor="@color/transparent_black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etStaffEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email Address"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/text_white"
                    android:drawableStart="@drawable/ic_email"
                    android:drawableTint="@color/luxe_gold"
                    android:drawablePadding="8dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Phone Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxStrokeColor="@color/luxe_gold"
                app:hintTextColor="@color/luxe_gold"
                app:boxBackgroundColor="@color/transparent_black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etStaffPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:textColor="@color/text_white"
                    android:drawableTint="@color/luxe_gold"
                    android:drawablePadding="8dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Role Dropdown -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxStrokeColor="@color/luxe_gold"
                app:hintTextColor="@color/luxe_gold"
                app:boxBackgroundColor="@color/transparent_black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/actvRole"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Staff Role"
                    android:inputType="none"
                    android:textColor="@color/text_white"
                    android:drawableStart="@drawable/ic_role"
                    android:drawableTint="@color/luxe_gold"
                    android:drawablePadding="8dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Hire Date Picker -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxStrokeColor="@color/luxe_gold"
                app:hintTextColor="@color/luxe_gold"
                app:boxBackgroundColor="@color/transparent_black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etHireDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Hire Date"
                    android:inputType="none"
                    android:focusable="false"
                    android:textColor="@color/text_white"
                    android:drawableStart="@drawable/ic_calendar"
                    android:drawableTint="@color/luxe_gold"
                    android:drawablePadding="8dp"
                    android:onClick="showDatePicker" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Additional Notes -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="@color/luxe_gold"
                app:hintTextColor="@color/luxe_gold"
                app:boxBackgroundColor="@color/transparent_black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAdditionalNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Additional Notes (Optional)"
                    android:inputType="textMultiLine"
                    android:textColor="@color/text_white"
                    android:minLines="3"
                    android:gravity="top" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Gold corner accent -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:src="@drawable/corner_gold"
                android:layout_marginTop="16dp"
                android:alpha="0.7" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textColor="@color/luxe_gold"
            app:strokeColor="@color/luxe_gold"
            app:cornerRadius="12dp"
            android:layout_marginEnd="8dp"
            android:paddingVertical="14dp" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save"
            android:backgroundTint="@color/luxe_burgundy"
            android:textColor="@color/luxe_gold"
            app:strokeColor="@color/luxe_gold"
            app:strokeWidth="1dp"
            app:cornerRadius="12dp"
            android:paddingVertical="14dp" />
    </LinearLayout>
</LinearLayout>